{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build --bin main", // This label must match preLaunchTask in launch.json
      "type": "shell",
      "command": "cargo build --bin main", // The actual command to run
      "group": "build",
      "problemMatcher": [
        "$rustc"
      ],
      "presentation": {
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
